<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="500.0" minWidth="600.0" style="-fx-background-color: slategray;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainViewController">
   <children>
      <VBox alignment="CENTER" layoutX="170.0" layoutY="126.0">
         <children>
            <Button fx:id="openRockwellBtn" maxHeight="75.0" mnemonicParsing="false" onAction="#openRockwellWindow" prefHeight="75.0" prefWidth="278.0" style="-fx-background-color: gainsboro;" textFill="#801b1b">
               <graphic>
                  <HBox>
                     <children>
                        <ImageView fx:id="imageRockwellButton" fitHeight="65.0" fitWidth="263.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/rockwellLogo.png" />
                           </image></ImageView>
                     </children></HBox>
               </graphic>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Pane prefHeight="75.0" prefWidth="278.0" />
            <Button fx:id="openSiemensBtn" maxHeight="75.0" mnemonicParsing="false" onAction="#openSiemensWindow" prefHeight="75.0" prefWidth="278.0" style="-fx-background-color: gainsboro;" textFill="#801b1b">
               <graphic>
                  <HBox alignment="TOP_CENTER">
                     <children>
                        <ImageView fx:id="imageSiemensButton" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/siemensLogo.png" />
                           </image></ImageView>
                     </children></HBox>
               </graphic>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>

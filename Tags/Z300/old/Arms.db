DATA_BLOCK "TiltingArms_Alm"
{ S7_Optimized_Access := 'FALSE' }
VERSION : 0.1
NON_RETAIN
   STRUCT 
      tMotor : Array["STARTARRAY".."DNUMARM"] of Struct   // Motor allarms
         tEmergencyAlarm { ExternalWritable := 'False'} : Array["STARTARRAY".."DALARM"] of "UDT_HMI_Alarm_V2";
         tAlarm { ExternalWritable := 'False'} : Array["STARTARRAY".."DALARM"] of "UDT_HMI_Alarm_V2";
         tWarning { ExternalWritable := 'False'} : Array["STARTARRAY".."DALARM"] of "UDT_HMI_Alarm_V2";
      END_STRUCT;
      tEmergencyAlarm { S7_SetPoint := 'False'} : Array["STARTARRAY".."DALARM"] of "UDT_HMI_Alarm_V2";   // stop machine fault
      tAlarm { S7_SetPoint := 'False'} : Array["STARTARRAY".."DALARM"] of "UDT_HMI_Alarm_V2";   // stop next cycle faults
      tWarning { S7_SetPoint := 'False'} : Array["STARTARRAY".."DALARM"] of "UDT_HMI_Alarm_V2";   // Generic warning
   END_STRUCT;


